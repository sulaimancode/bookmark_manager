<h1> Links </h1>

<ul id='links'>
  <% @links.each do |link| %>
    <li>
      Title: <%= link.title %>
      URL:   <%= link.url   %>
      tags: <%= link.tags.map(&:name) %>
    </li>
  <% end %>
</ul>

<form action="/links/new" id="form2">
  <button type="submit" form="form2" value="Create new link"> Create new link </button>
</form>
